{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "jsx": "react-jsx",
      "moduleResolution": "Bundler",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "types": ["vite/client", "node", "react", "react-dom"]
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.d.ts", // THIS LINE IS IMPORTANT
      "src/renderer/**/*.env.d.ts", // THIS LINE IS IMPORTANT
      "src/**/*.tsx",
      "src/**/*.js",
      "src/**/*.jsx",
      "vite.config.ts",
      "electron-builder.d.ts", // if you have this
      "dist/renderer" // For build output, less relevant for env.d.ts
    ],
    "exclude": ["dist", "node_modules"]
  }